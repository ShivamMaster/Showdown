{
  "manifest_version": 3,
  "name": "Showdown Battle Predictor",
  "version": "1.0.0",
  "description": "Real-time tactical advisor overlay for Pok√©mon Showdown battles",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "*://play.pokemonshowdown.com/*",
    "*://smogtours.psim.us/*",
    "*://*.psim.us/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://play.pokemonshowdown.com/*",
        "*://smogtours.psim.us/*",
        "*://*.psim.us/*"
      ],
      "js": [
        "data/type_chart.js",
        "data/pokemon_data.js",
        "data/move_data.js",
        "scraper.js",
        "engine.js",
        "ui.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
